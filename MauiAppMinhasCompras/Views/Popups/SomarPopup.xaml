<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MauiAppMinhasCompras.Views.Popups.SomarPopup"
               CanBeDismissedByTappingOutsideOfPopup="True">

    <VerticalStackLayout BackgroundColor="White" Padding="20" Spacing="20" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center">

        <Label Text="Valor Total:" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label x:Name="lblValorTotal" FontSize="Medium" TextColor="Black" HorizontalOptions="Center" />

        <Picker x:Name="pickerCategoria" Title="Selecione uma Categoria" HorizontalOptions="FillAndExpand" SelectedIndexChanged="OnPickerCategoriaChanged" />

        <Label x:Name="lblValorCategoria" FontSize="Medium" TextColor="Black" HorizontalOptions="Center" />

        <Button Text="Fechar" Clicked="OnFecharClicked" HorizontalOptions="FillAndExpand" />

    </VerticalStackLayout>
</toolkit:Popup>